{
  "version": "5.0.3",
  "compilerOptions": {
    "target": "es2015",
    "module": "umd",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "rootDir": "./src",
    "outDir": "dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "**/src/*.ts"
  ],
  "exclude": [
    "**/node_modules/@types/**"
  ]
}
